<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarColorTheme" parent="Base.ThemeOverlay.AppCompat.Dark">
        <item name="android:textColor">@color/colorMenuText</item>
        <item name="android:textColorPrimary">@color/colorTitleText</item>
        <item name="android:textColorSecondary">@color/colorTitleText</item>
        <item name="android:itemBackground">@color/colorMenuBackground</item>
    </style>
</resources>
